<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo2"
            android:scaleType="centerInside"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingTop="30dp"
            >

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--&gt;-->

            <!--<com.google.android.gms.common.SignInButton-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/mygooglebtn"-->
            <!--android:layout_gravity="bottom"-->
            <!--&gt;-->

            <!--</com.google.android.gms.common.SignInButton>-->


            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <EditText
                    android:id="@+id/loginemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/username_drawable_selector"
                    android:drawablePadding="10dp"
                    android:nextFocusDown="@id/loginpassword"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    />

                <TextView
                    android:id="@+id/emailError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:layout_gravity="top"
                    android:textColor="#ff0000"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/loginpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    android:drawableLeft="@drawable/password_drawable_selector"
                    android:drawablePadding="10dp"
                    android:inputType="textPassword"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/passwordError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:layout_gravity="top"
                    android:textColor="#ff0000"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:textSize="18sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="#fff"
                    android:text="signup"
                    android:background="@drawable/roundbtnaccent"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_marginRight="9dp"
                    android:id="@+id/btnSignup"
                    android:drawableStart="@drawable/ic_person_add_white_24dp"
                    android:paddingLeft="20dp"
                    android:drawablePadding="-30dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>