<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ParentHomePage"
    tools:showIn="@layout/activity_parent_home_page"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="10dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/searchroute"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="6dp">

        <FrameLayout

            android:background="@color/pink"
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <FrameLayout

            android:background="@color/pink"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"/>
        <FrameLayout

            android:background="@color/pink"
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <FrameLayout

            android:background="@color/pink"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgsearch"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_search_white_24dp"
                android:background="@drawable/bg_shape1"
                android:padding="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search Routes"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/myroute"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="6dp">


        <FrameLayout

            android:background="@color/lightblue"
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <FrameLayout

            android:background="@color/lightblue"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"/>
        <FrameLayout

            android:background="@color/lightblue"
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <FrameLayout

            android:background="@color/lightblue"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgmyroute"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_shape3"
                android:padding="20dp"
                android:src="@drawable/ic_map_white_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Child's Route"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/driverlocation"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="6dp">

            <FrameLayout

                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="3dp" />

            <FrameLayout

                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom"/>
            <FrameLayout

                android:background="@color/green"
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
            <FrameLayout

                android:background="@color/green"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgdriverlocation"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_location_on_white_24dp"
                    android:background="@drawable/bg_shape5"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Driver Location"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/ratedriver"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="6dp">

            <FrameLayout

                android:background="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="3dp" />

            <FrameLayout

                android:background="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom"/>
            <FrameLayout

                android:background="@color/yellow"
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
            <FrameLayout

                android:background="@color/yellow"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgratedriver"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_shape4"
                    android:padding="20dp"
                    android:src="@drawable/ic_star_white_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate Driver"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/payments"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="6dp">

            <FrameLayout

                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="3dp" />

            <FrameLayout

                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom"/>
            <FrameLayout

                android:background="@color/orange"
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
            <FrameLayout

                android:background="@color/orange"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imgpayment"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_payment_white_24dp"
                    android:background="@drawable/bg_shape6"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payments"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:clickable="true"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/myprofile"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="6dp">


            <FrameLayout

                android:background="@color/deeppurple"
                android:layout_width="match_parent"
                android:layout_height="3dp" />

            <FrameLayout

                android:background="@color/deeppurple"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom"/>
            <FrameLayout

                android:background="@color/deeppurple"
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
            <FrameLayout

                android:background="@color/deeppurple"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgmyprofile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_shape2"
                    android:padding="25dp"
                    android:src="@drawable/ic_person_outline_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>